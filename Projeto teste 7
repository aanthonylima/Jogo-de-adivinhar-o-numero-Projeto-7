// Vari√°veis iniciais do jogo
let tentativas = 1             // Contador de tentativas come√ßa em 1, para o contador n√£o partir de 0
let pontos = 11                // Pontua√ß√£o inicial √© 11 (ser√° reduzida imediatamente para 10 na primeira jogada)
let novamente = "S"            // Controle para jogar novamente (S/N)
let rodada = 0                 // Contador de rodadas
let tabela = []                // Array/Matriz que armazenar√° o resumo das rodadas

console.log("Bem-vindo ao jogo do N√∫mero Secreto!\n\nO objetivo √© adivinhar um n√∫mero entre 1 e 100 sorteado aleatoriamente pelo computador.\n\nVoc√™ tem at√© 10 tentativas por rodada e come√ßa com 10 pontos, perdendo 1 ponto a cada tentativa.\n\nA cada palpite, ser√° informado se o n√∫mero secreto √© maior ou menor que o seu chute.\n\nAo final, voc√™ ver√° sua pontua√ß√£o e pode decidir se deseja jogar novamente.\n\nBoa sorte!üçÄüçÄüçÄ")

// Loop principal do jogo: continua enquanto o jogador digitar "S" ou "s"
while (novamente === "S" || novamente === "s") {

    // Gera um n√∫mero aleat√≥rio entre 1 e 100
    const numeroSecreto = Math.floor(Math.random() * 100 + 1)

    // Solicita o primeiro palpite do jogador
    let pergunta = parseInt(prompt("\nInsira um n√∫mero: "))

    // Verifica√ß√£o da primeira tentativa
    if (pergunta !== numeroSecreto) {
        tentativas++
        pontos--
    } else {
        tentativas++
        pontos--
    }

    // Loop de tentativa at√© o jogador acertar ou alcan√ßar o limite de 10 tentativas
    while (pergunta !== numeroSecreto && tentativas <= 10) {
        // Diz se o palpite foi menor ou maior que o n√∫mero secreto
        if (numeroSecreto > pergunta) {
            console.log(`${pergunta} √© menor do que o n√∫mero secreto!`)
        } else if (numeroSecreto < pergunta) {
            console.log(`${pergunta} √© maior do que o n√∫mero secreto!`)
        }

        // Solicita novo palpite
        pergunta = parseInt(prompt("\nInsira um n√∫mero: "))
        tentativas++
        pontos--
    }

    // Se o jogador acertar
    if (pergunta === numeroSecreto) {
        console.log("Parab√©ns! Voc√™ acertou! üéâüéâüéâ")
        console.log(`\nVoc√™ fez ${pontos} pontos e acertou na ${tentativas - 1}¬∞ tentativa!`)
    }
    // Se n√£o acertar em at√© 10 tentativas
    else {
        console.log(`Infelizmente voc√™ n√£o acertou. üò≠üò≠üò≠\nO n√∫mero correto era ${numeroSecreto}.`)
        console.log(`Voc√™ fez ${pontos} pontos.`)
    }

    // Informa o n√∫mero da rodada
    rodada++

    // Salva os dados da rodada na tabela
    tabela.push({
        Rodada: rodada,
        Tentativas: tentativas - 1,
        N√∫mero: numeroSecreto,
        Pontua√ß√£o: pontos
    })

    // Reinicia os valores para a pr√≥xima rodada
    tentativas = 1
    pontos = 10

    // Pergunta se o jogador quer jogar novamente
    novamente = prompt("\nDeseja jogar novamente? (S/N) ")
}

// Mostra o resumo de todas as rodadas jogadas ap√≥s o jogador dizer que n√£o quer jogar novamente
console.log("\n\nResumo de jogo: ")
console.table(tabela)

console.log("\n\nObrigado por jogar o N√∫mero Secreto! üéâ Esperamos que tenha se divertido. At√© a pr√≥xima! üëã")
